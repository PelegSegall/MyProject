<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".prepFragCreate"
    android:background="@color/app_back">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/stepNum2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="25sp"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/stepDes2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter A Step"
                android:textSize="25sp"
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="40dp"
            android:visibility="gone">

            <ImageButton
                android:id="@+id/backward2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:visibility="invisible"
                android:background="@drawable/baseline_arrow_left_24"
                android:backgroundTint="@color/black"/>

            <ImageButton
                android:id="@+id/forward2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/baseline_arrow_right_24"
                android:backgroundTint="@color/black"/>

        </LinearLayout>

        <Button
            android:id="@+id/addBtn2"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:text="Add Another Step"
            android:background="@drawable/rounded_corners_btn"
            android:textSize="25sp"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/saveBtn2"
            android:layout_width="115dp"
            android:layout_height="60dp"
            android:text="Save"
            android:background="@drawable/rounded_corners_btn"
            android:textSize="25sp"
            android:layout_marginTop="270dp"/>

    </LinearLayout>

</FrameLayout>